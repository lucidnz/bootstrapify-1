{% layout settings.customer_layout %}
<div class="row">
    {% include 'sidebar' %}
<div class="span9 columns">

<div id="template">
  <div class="template_header">
    <h2 class="title">Activate Account</h2>
    <p class="note">Create your password to activate your account</p>
  </div>

  {% form 'activate_customer_password' %}
{% if form.errors %}
<div class="alert alert-error">
      {{ form.errors | default_errors }}
</div>
{% endif %}


<div class="well form-inline">
  <input type="password" value="" placeholder="Password" name="customer[password]" id="customer_password" class="input-large" />
  <input type="password" value="" placeholder="Confirm Password" name="customer[password_confirmation]" id="customer_password_confirmation" class="input-large" />
<button class="btn btn-primary" type="submit">Activate Account</button>
<button class="btn cancel" type="submit" name="decline" id="customer_decline">Decline Invitation</button>

</div> 

  {% endform %}
</div>
</div>
</div>
