{% capture collection_image %}
{% if collection-loop.image and settings.collection-feature-image == 'collection-image' %}
  {{ collection-loop.image.src | collection_img_url: 'large' | img_tag: collection-loop.image.alt | link_to: collection-loop.url }}
{% elsif collection-loop.products.first.featured_image.src == blank and collection-loop.products.last.featured_image.src == blank %}
  {% include 'image-placeholder' %}
{% elsif collection-loop.products.last.featured_image and settings.collection-feature-image == 'last-product-image' %}
  {{ collection-loop.products.last.featured_image.src | product_img_url: 'large' | img_tag: collection-loop.products.last.featured_image.alt | link_to: collection-loop.url }}
{% else %}
  {{ collection-loop.products.first.featured_image.src | product_img_url: 'large' | img_tag: collection-loop.products.first.featured_image.alt | link_to: collection-loop.url }}
{% endif %}
{% endcapture %}{{ collection_image | strip }}