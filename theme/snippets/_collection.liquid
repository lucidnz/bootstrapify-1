{% include '__collection-image' %}
<div class="{% if settings.collections-per-row == blank %}{% include '__thumbnail-span' %}{% else %}col-sm-{{ 12 | divided_by: settings.collections-per-row }}{% endif %}{% if settings.masonry-style-layout %} masonry{% endif %}">
  <div class="thumbnail text-center">
    <div class="thumbnail-image">
      {{ image }}
    </div>
    <div class="caption clearfix">
      <h4>{{ _collection.title | link_to: _collection.url, _collection.title }}</h4>
      {% capture product_title %}{% include '__localize' with 'Product' %}{% endcapture %}
      {% capture products_title %}{% include '__localize' with 'Products' %}{% endcapture %}
      {% if settings.show-product-count-for-collections %}<div class="text-muted">{{ _collection.all_products_count }}&nbsp;{{ _collection.all_products_count | pluralize: product_title, products_title }}</div>{% endif %}
    </div>
  </div>
</div>