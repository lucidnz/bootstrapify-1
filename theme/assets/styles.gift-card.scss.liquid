// - Variables -------------------------------------------------------------------------

//Colors

$accent: #34aadc;
$darkgrey: #58686f;
$lightgrey: #bfbfbf;
$smoke: #fafafa;

// Prefixes

$prefix-for-webkit: true;
$prefix-for-mozilla: true;
$prefix-for-spec: true;

// - Mixins ----------------------------------------------------------------------------

@mixin prefixer ($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      @if $prefix-for-webkit {
        -webkit-#{$property}: $value;
      }
    }
    @else if $prefix == moz {
      @if $prefix-for-mozilla {
        -moz-#{$property}: $value;
      }
    }
    @else if $prefix == ms {
      @if $prefix-for-microsoft {
        -ms-#{$property}: $value;
      }
    }
    @else if $prefix == o {
      @if $prefix-for-opera {
        -o-#{$property}: $value;
      }
    }
    @else if $prefix == spec {
      @if $prefix-for-spec {
        #{$property}: $value;
      }
    }
    @else  {
      @warn "Unrecognized prefix: #{$prefix}";
    }
  }
}

@mixin transition ($properties...) {
  @if length($properties) >= 1 {
    @include prefixer(transition, $properties, webkit moz spec);
  }

  @else {
    $properties: all 0.15s ease-out 0s;
    @include prefixer(transition, $properties, webkit moz spec);
  }
}

@mixin keyframes($name) {
  @-webkit-keyframes #{$name} {
    @content;
  }
  @-moz-keyframes #{$name} {
    @content;
  }
  @-ms-keyframes #{$name} {
    @content;
  }
  @keyframes #{$name} {
    @content;
  }
}

@mixin inline-block {
  display: inline-block;
  vertical-align: baseline;
  zoom: 1;
  *display: inline;
  *vertical-align: auto;
}

@mixin clearfix {
  &:after {
    content:"";
    display:table;
    clear:both;
  }
}

@mixin supported($feat) {
  .#{$feat} & { @content; }
}

@mixin unsupported($feat) {
  @if $feat == "flexbox" {
    .no-#{$feat}.no-#{$feat}legacy & { @content; }
  } @else {
    .no-#{$feat} & { @content; }
  }
}

@mixin box-sizing ($box) {
  @include prefixer(box-sizing, $box, webkit moz spec);
}

@mixin innerShadow($size: 1px, $radius: 0px, $opacity: .1) {
  position: relative;
  &:before {
    content:'';
      position:absolute;
      width:100%;
      height:100%;
      -moz-box-shadow:inset 0px 0px 0px $size rgba(0, 0, 0, $opacity);
      -webkit-box-shadow:inset 0px 0px 0px $size rgba(0, 0, 0, $opacity);
      box-shadow:inset 0px 0px 0px $size rgba(0, 0, 0, $opacity);
      border-radius: $radius;
      z-index: 1;
      pointer-events: none;
      user-select: none;
      display: block;
  }
}

@mixin animation ($animations...) {
  @include prefixer(animation, $animations, webkit moz spec);
}

@mixin opacity($opacity) {
  zoom: 1;
  opacity: $opacity;
  $opacity: $opacity * 100;
  filter: alpha(opacity=#{$opacity});
}

@mixin mq($value, $operator: 'max-width', $query: 'screen') {
  @media #{$query} and (#{$operator}: #{$value}) {
    @content;
  }
}

/* - General ----------------------------------------------------------------------------- */

html {
  -webkit-text-size-adjust: 100%;
  -webkit-print-color-adjust: exact;
}

body {
  font-family: "Montserrat", sans-serif; color: #333;
  background-color: $smoke;
  padding: 0; margin: 0;
  -webkit-font-smoothing: antialiased;
}

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section, main {
  display: block;
}

/* - Viewport Fixes --------------------------------------------------------------------- */

@-webkit-viewport { width: device-width; }
@-moz-viewport { width: device-width; }
@-ms-viewport { width: device-width; }
@-o-viewport { width: device-width; }
@viewport { width: device-width; }

/* - Links ----------------------------------------------------------------------------- */

a {
  text-decoration: none;
  @include transition(color .2s ease-in-out, background-color .2s ease-in-out);
}

/* Buttons */

.btn {
  background-color: $darkgrey;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: .1em;
  padding: 1.5em;
  font-size: .875em;
  line-height: 1;
  border-radius: 4px;
  @include inline-block;

  &:hover {
    background-color: darken($darkgrey, 10%);
  }
}

/* - Media ----------------------------------------------------------------------------- */

img, video, object {
  max-width: 100%;
  display: block;
}

/* - Headers --------------------------------------------------------------------------- */

h2 {
  margin: 0;
  font-size: 1.125em; font-weight: 600; color: $darkgrey;
}

h4 {
  text-transform: uppercase; letter-spacing: .1em; font-weight: normal; font-size: .875em; color: #999;
  margin: 0;
}

/* - Wrapper --------------------------------------------------------------------------- */

.wrap {
  width: 95%; max-width: 540px;
  margin: 0 auto;
  @include clearfix;
}

/* - Text selection -------------------------------------------------------------------- */

::-moz-selection { background-color: $accent; color: #fff; }
::selection { background-color: $accent; color: #fff; }

/* - Animations ------------------------------------------------------------------------ */

@include keyframes(slideup) {
  0% { opacity: 0; -webkit-transform: translateY(2000px) rotate(10deg); }
  60% { opacity: 1; -webkit-transform: translateY(-30px); }
  80% { -webkit-transform: translateY(10px); }
  100% { -webkit-transform: translateY(0) rotate(0deg); }
}

@include keyframes(popup) {
  0% {opacity: 0; -webkit-transform: translateY(30px); }
  60% {opacity: 1; -webkit-transform: translateY(-10px); }
  80% {-webkit-transform: translateY(2px); }
  100% {-webkit-transform: translateY(0); }
}

@include keyframes(container-slide) {
  0% {opacity: 0; -webkit-transform: rotate(-0deg); }
  100% {-webkit-transform: rotate(0deg); }
}

@include keyframes(fadein) {
  0% {opacity: 0; }
  100% {opacity: 100; }
}

